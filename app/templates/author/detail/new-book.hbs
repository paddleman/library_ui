<div class="modal">
  <form class="modal-card" onsubmit={{action "saveBook"}}  >
    <h3 class="modal-heading">Add New Book For {{model.author.last}}, {{model.author.first}} </h3>

    <div class="modal-content">
      <div class="field">
        <label>Title:</label>
        {{input type="text" placeholder= "Title" value=model.book.title }}
      </div>

      <div class="field">
        <label>ISBN:</label>
        {{input type="text" placeholder= "ISBN" value=model.book.isbn }}
      </div>

      <div class="field">
        <label>Date Published:</label>
        {{input type="date" placeholder= "Date Published" value=model.book.publishDate }}
      </div>

      <div class="modal-footer">
        {{#link-to "author.detail" model.author.id  class="btn-clear"}}Cancel{{/link-to}}
        <button class="btn-submit" type="submit"  >Save</button>
      </div>
    </div>
  </form>
</div>