<div class="slide-out-bg"></div>

<div class="slide-out">
  <div class="slide-out-card">
    {{#link-to "author.detail" model.id class="btn-back" }}
      <span class="sr-only">Back</span>
    {{/link-to}} 

    <div class="slide-out-heading">
      <div class="title">
        <h3>Editing: {{model.last}}, {{model.first}}  </h3>
      </div>
    </div>

    <div class="slide-out-content">
      <form  > 
        <div class="field">
          <label>First Name:</label>
          {{input type="text" placeholder="First Name" value=model.first}}
        </div>      

        <div class="field">
          <label>Last Name:</label>
          {{input type="text" placeholder="Last Name" value=model.last}}          
        </div>

        <div class="form-footer">
          <button class="btn-submit" type="submit">Save</button>
        </div>      

      </form>
    </div>
  </div>
</div>