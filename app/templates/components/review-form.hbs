<form onsubmit={{action "submitChanges"}}  >
  <div class="field">
    <label>Your Full Name</label>
    {{input type="text" placeholder="Name" value=user }}
  </div>

  <div class="field">
    <label>Write Your Review</label>
    {{textarea type="text" placeholder="Review Text" value=body }}
  </div>

  <div class="form-footer">
    {{#link-to "book.detail" book.id class="btn-reset" }}Reset{{/link-to}}
    <button class="btn-submit" type="submit">Save</button>
  </div>

</form>