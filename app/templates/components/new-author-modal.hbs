<button class="btn-trigger" type="button" onclick={{action (mut showModal) true}}  >Add a New Author</button>

{{#if showModal}}
  <div class="modal">
    <form class="modal-card" onsubmit={{action "save"}}>
      <h3 class="modal-heading">Add New Author For Book</h3>

      <div class="modal-content">
        <div class="field">
          <label>First Name:</label>
          {{input type="text" placeholder= "First Name" value=author.first }}
        </div>

        <div class="field">
          <label>Last Name:</label>
          {{input type="text" placeholder= "Last Name" value=author.last }}
        </div>

        <div class="modal-footer">
          <button class="btn-clear" type="button" onclick={{action (mut showModal) false}} >Cancel</button>
          <button class="btn-submit" type="submit"  >Save</button>
        </div>
      </div>
    </form>
  </div>
{{/if}}
